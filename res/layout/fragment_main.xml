<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.supermicro.replydog.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:text="Add" />
    
    <EditText
        android:id="@+id/editTxtAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/btnAdd"
        android:ems="10"
        android:hint="keyword;reply" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnAdd"
        android:layout_below="@+id/btnAdd"
        android:layout_marginTop="52dp"
        android:text="Delete" />

    <EditText
        android:id="@+id/editTxtDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDel"
        android:layout_alignLeft="@+id/editTxtAdd"
        android:ems="10"
        android:hint="keyword" />
    
    <Button
        android:id="@+id/BtnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDel"
        android:layout_below="@+id/btnDel"
        android:layout_marginTop="59dp"
        android:text="Send" />
    
    <AutoCompleteTextView
        android:id="@+id/editTxtSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BtnSend"
        android:layout_alignLeft="@+id/editTxtAdd"
        android:completionThreshold="1"
        android:ems="10" />

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignRight="@+id/editTxtAdd"
        android:layout_below="@+id/BtnSend"
        android:layout_marginTop="68dp"
        android:lines="10"
        android:scrollbars="vertical" />

</RelativeLayout>
